<!-- CARD  -->

<div class="container">
  <h2 class="text-center">Spaces around the world</h2>
  <div class="cards">
    <div class="row">

      <!-- CARD PART -->
      <% @workspaces.each do |x| %>
        <div class="col-xs-12 col-sm-4">
        <div class="card">

              <!-- CARD: body -->
              <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.2)), url('<%= x.cover_image_url %>');">
                <span class="card-category"><%= x.space_type %></span>
                <div class="card-description">
                  <h2><%= x.name %></h2>
                  <p><%= x.city %>, <%= x.country %></p>
                </div>
                <img class="card-user avatar avatar-large" src="<%= x.logo %>">
                <!-- <a class="card-link" href="index.html#"></a> -->
                <%= link_to 'view', owner_workspaces_show_by_owner_path(current_owner.id, x.id), :class => "card-link" %>
              </div>

              <!-- CARD: footer -->
              <div class="card-footer">
                <p>Price $<%= x.price_per_day %>/day</p>
                <div class="controls">
                  <a href="index.html#">
                    <i class="fa fa-star"></i>
                  </a>
                </li>
                <a href="index.html#">
                  <i class="fa fa-heart"></i>
                </a>
              </li>
              <a href="index.html#">
                <i class="fa fa-share"></i>
              </a>
            </li>
            </div>
            </div>
          </div>

        </div>
      <% end %>
      <!-- CARD PART -->
    </div>
</div>
</div>

