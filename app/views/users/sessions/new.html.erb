<%= stylesheet_link_tag "_owner_login" %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://cdn.shopify.com/s/files/1/1616/3939/collections/products.jpg?v=1487705988');">

    <div class="header-login">
      <div>Sharespace.<span>User</span></div>
    </div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="login">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    <div class="links"><%= render "owners/shared/links" %></div>
  </div>
<% end %>

